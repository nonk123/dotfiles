font pango:Inconsolata for Powerline 12

# Ensure a universal modkey for the entire configuration.
set $mod Mod4

# Configure the keyboard layout.
exec --no-startup-id setxkbmap -layout "ch(de),ru" -option grp:win_space_toggle
exec --no-startup-id xset r rate 200 30

# Start some cool daemons.
exec --no-startup-id dunst

# Quick-launch keybindings.
bindsym  $mod+Return exec emacsclient -c -e '(vterm-new-session)'
bindsym  $mod+e exec emacsclient -c -e '(switch-to-buffer nil)'
bindsym  $mod+d exec "rofi -modi drun,run -show drun"

# Enable easy screenshot-making.
bindsym  Print exec screenshot region
bindsym  Mod1+Print exec screenshot window
bindsym  Shift+Print exec screenshot display

# Hide window title-bars.
default_border pixel 1
default_floating_border pixel 1

# Window-management commands.

floating_modifier $mod

# Direction constants.
set $left h
set $down j
set $up k
set $right l

bindsym $mod+q kill

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Control+$left move left
bindsym $mod+Control+$down move down
bindsym $mod+Control+$up move up
bindsym $mod+Control+$right move right

bindsym $mod+Shift+$left resize shrink width 10 px or 10 ppt
bindsym $mod+Shift+$down resize grow height 10 px or 10 ppt
bindsym $mod+Shift+$up resize shrink height 10 px or 10 ppt
bindsym $mod+Shift+$right resize grow width 10 px or 10 ppt

bindsym $mod+m split h
bindsym $mod+n split v

bindsym $mod+f fullscreen toggle
bindsym $mod+w floating toggle

bindsym $mod+s focus mode_toggle

# Workspace commands.

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Control+1 move container to workspace number $ws1
bindsym $mod+Control+2 move container to workspace number $ws2
bindsym $mod+Control+3 move container to workspace number $ws3
bindsym $mod+Control+4 move container to workspace number $ws4
bindsym $mod+Control+5 move container to workspace number $ws5
bindsym $mod+Control+6 move container to workspace number $ws6
bindsym $mod+Control+7 move container to workspace number $ws7
bindsym $mod+Control+8 move container to workspace number $ws8
bindsym $mod+Control+9 move container to workspace number $ws9
bindsym $mod+Control+0 move container to workspace number $ws10

# "System" commands.
bindsym $mod+r reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exit

# Set up an i3blocks status bar.
bar {
    status_command i3blocks
    separator_symbol " | "
    position top
}
