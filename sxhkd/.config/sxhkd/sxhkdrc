super + {h,j,k,l}
      i3-msg focus {left,down,up,right}

super + ctrl + {h,j,k,l}
      i3-msg move {left,down,up,right} 50 px

super + shift + {h,j,k,l}
      i3-msg resize {grow width,grow height,shrink height,shrink width} 25 px

super + v
      i3-msg split {v,h}

super + {_,ctrl +} {0-9}
      i3-msg {_,move container to} workspace {0-9}

super + g
      i3-msg gaps inner all set {5,0}

super + q
      i3-msg kill

super + {f,F}
      i3-msg {floating,fullscreen} toggle

super + {t,T,s}
      i3-msg layout {toggle split,tabbed,stacking}

super + {greater,less,p}
      mpc {prev,next,toggle}; pkill -RTMIN+1 i3blocks

super + r
      mpc repeat {on; mpc single on,off; mpc single off}; pkill -RTMIN+1 i3blocks

super + u
      mpc rescan && mpc update && mpc clear && mpc ls | mpc add

super + {plus,minus}
      mpc seek {+,-}10

super + P
      ~/Scripts/play_by_filename.sh; pkill -RTMIN+1 i3blocks

super + b
      ~/Scripts/surf.sh

super + d
      dmenu_run

super + e
      emacsclient -c

super + R
      pkill --signal USR1 sxhkd && i3-msg restart

super + Return
      x-terminal-emulator

{_,shift + }Print
         ~/Scripts/{selection,desktop}_screenshot.sh
