super + {h,j,k,l}
    i3-msg focus {left,down,up,right}

super + ctrl + {h,j,k,l}
    i3-msg move {left,down,up,right} 50 px

super + shift + {h,j,k,l}
    i3-msg resize {grow width,grow height,shrink height,shrink width} 25 px

super + v
    i3-msg split {v,h}

super + {_,ctrl +} {0-9}
    i3-msg {_,move container to} workspace {0-9}

super + g
    i3-msg gaps inner all set {5,0}

super + q
    i3-msg kill

super + {f,F}
    i3-msg {floating,fullscreen} toggle

super + {t,T,s}
    i3-msg layout {toggle split,tabbed,stacking}

super + p
    mpd-control select

super + semicolon
    mpd-control interactive

super + o
    mpd-control toggle

super + bracketleft
    notify-send "Info" "$(mpd-control)"

super + {braceleft,braceright}
    mpd-control seek {-,+}8

super + b
    start-surf

super + d
    dmenu_run

super + e
    emacsclient -c

super + P
    swap-clipboard

super + r
    pkill -USR1 sxhkd

super + R
    i3-msg restart

super + Return
    x-terminal-emulator

Print
    screenshot -s

shift + Print
    screenshot -i root