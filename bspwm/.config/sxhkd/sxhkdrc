super + {h,j,k,l}
    bspc node -f {west,south,north,east}

super + {_,control + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

super + shift + {h,j,k,l}; {1-9}
    bspc node @{west,south,north,east} -r 0.{1-9}

super + {n,m}
    bspc node -p {south,east}

super + {t,f,F}
    bspc node -t ~{tiled,floating,fullscreen}

super + {q,Q}
    bspc node -{c,k}

super + {0-9}
    bspc desktop -f {0-9}

super + ctrl + {0-9}
    bspc node -d {0-9}

super + d
    rofi -modi drun,run -show drun

super + e
    emacsclient -c

super + Return
    emacsclient -c -e "(vterm-new-session)"

Print
    screenshot region

alt + Print
    screenshot window

shift + Print
    screenshot display

super + r
    pkill -SIGUSR1 sxhkd

XF86Audio{Stop,Play}
    mpc -q {stop,toggle}

XF86Audio{Prev,Next}
    mpc -q seek {-,+}5

XF86Audio{Lower,Raise}Volume
    pactl -- set-sink-volume 0 {-,+}10%
