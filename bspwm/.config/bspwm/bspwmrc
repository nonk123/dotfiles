#!/usr/bin/env bash

export LIBVA_DRIVER_NAME="vdpau"

bspc monitor ^1 -d 1{0..9}
bspc monitor ^2 -d 2{0..9}
bspc config window_gap 0
bspc config focus_follows_pointer false
bspc config presel_feedback false

xrdb ~/.Xresources
xrdb -merge ~/.Xresources-catpuccin
xrdb -merge ~/.Xresources-xst

xfsettingsd &
xfconf-query -c xsettings -p /Net/ThemeName -s "Catppuccin-Macchiato-Standard-Green-dark-hdpi"

/usr/lib/xfce4/notifyd/xfce4-notifyd &
sxhkd &
xcompmgr &

discord &

setxkbmap -layout "us,ru" -option "grp:win_space_toggle"
xset r rate 200 30
