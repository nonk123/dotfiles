font pango:Inconsolata for Powerline 12

# Ensure a universal modkey for the entire configuration.
set $mod Mod4

# Configure the keyboard layout.
input * {
    xkb_layout "ch(de),ru"
    xkb_options "grp:win_space_toggle"
    xkb_numlock enable
    repeat_delay 200
    repeat_rate 30
}

# Command shortcuts.
set $bindkey bindsym --to-code

# Start some cool daemons.
exec --no-startup-id mako

# Quick-launch keybindings.
$bindkey $mod+Return exec emacsclient -c -e '(vterm-new-session)'
$bindkey $mod+e exec emacsclient -c -e '(switch-to-buffer nil)'
$bindkey $mod+d exec rofi -modi "drun,run" -show drun

# Enable easy screenshot-making.
$bindkey Print exec swayshot region
$bindkey Mod1+Print exec swayshot window
$bindkey Shift+Print exec swayshot display

# Set a cool background.
output * bg #080808 solid_color

# Hide window title-bars.
default_border pixel 1
default_floating_border pixel 1

# Window-management commands.

floating_modifier $mod

# Direction constants.
set $left h
set $down j
set $up k
set $right l

$bindkey $mod+q kill

$bindkey $mod+$left focus left
$bindkey $mod+$down focus down
$bindkey $mod+$up focus up
$bindkey $mod+$right focus right

$bindkey $mod+Control+$left move left
$bindkey $mod+Control+$down move down
$bindkey $mod+Control+$up move up
$bindkey $mod+Control+$right move right

$bindkey $mod+Shift+$left resize shrink width 10 px or 10 ppt
$bindkey $mod+Shift+$down resize grow height 10 px or 10 ppt
$bindkey $mod+Shift+$up resize shrink height 10 px or 10 ppt
$bindkey $mod+Shift+$right resize grow width 10 px or 10 ppt

$bindkey $mod+m split h
$bindkey $mod+n split v

$bindkey $mod+f fullscreen toggle
$bindkey $mod+w floating toggle

$bindkey $mod+s focus mode_toggle

# Workspace commands.

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

$bindkey $mod+1 workspace number $ws1
$bindkey $mod+2 workspace number $ws2
$bindkey $mod+3 workspace number $ws3
$bindkey $mod+4 workspace number $ws4
$bindkey $mod+5 workspace number $ws5
$bindkey $mod+6 workspace number $ws6
$bindkey $mod+7 workspace number $ws7
$bindkey $mod+8 workspace number $ws8
$bindkey $mod+9 workspace number $ws9
$bindkey $mod+0 workspace number $ws10

$bindkey $mod+Control+1 move container to workspace number $ws1
$bindkey $mod+Control+2 move container to workspace number $ws2
$bindkey $mod+Control+3 move container to workspace number $ws3
$bindkey $mod+Control+4 move container to workspace number $ws4
$bindkey $mod+Control+5 move container to workspace number $ws5
$bindkey $mod+Control+6 move container to workspace number $ws6
$bindkey $mod+Control+7 move container to workspace number $ws7
$bindkey $mod+Control+8 move container to workspace number $ws8
$bindkey $mod+Control+9 move container to workspace number $ws9
$bindkey $mod+Control+0 move container to workspace number $ws10

# "System" commands.
$bindkey $mod+r reload
$bindkey $mod+Shift+r restart
$bindkey $mod+Shift+e exit

# Set up an i3blocks status bar.
bar {
    status_command i3blocks
    separator_symbol " | "
    position top
}
