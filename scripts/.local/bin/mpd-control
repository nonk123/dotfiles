#!/bin/bash

host=185.222.117.80
port=6600
http_port=8000

http="http://$host:$http_port"

mpc playlist | grep $http > /dev/null || mpc add $http
#pgrep music-status > /dev/null || music-status & disown

function _mpc {
    mpc --host=$host --port=$port "$@"
}

function queue {
    _mpc stop
    _mpc clear

    echo "$1" | while read track; do
        _mpc search filename "$track" | _mpc add
    done

    _mpc play
}

function play {
    queue "$1"

    mpc stop
    mpc play

    notify-send "Playing"
}

function start_selection {
    _mpc listall | prompt "Select a track"
}

function pause {
    _mpc pause
    mpc stop
    notify-send "Paused"
}

function resume {
    _mpc play
    mpc play
    notify-send "Resumed"
}

cmd=$@

case "$cmd" in
select)
    result=$(start_selection)
    [ "$result" ] && play "$result"
    ;;
queue)
    result=$(start_selection)
    [ "$result" ] && queue "$result"
    ;;
interactive)
    artist=$(_mpc ls | prompt "Select an artist")
    [ "$artist" ] && album=$(_mpc ls "$artist" | prompt "Select an album")
    [ "$album" ] && track=$(_mpc ls "$album" | prompt "Select a track")
    [ "$track" ] && play "$track"
    ;;
toggle)
    _mpc | grep playing && pause || resume
    ;;
http)
    echo "$http"
    ;;
*)
    _mpc "$@"
    ;;
esac
