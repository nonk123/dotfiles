#!/usr/bin/env bash

OUTPUT=$(mktemp --tmpdir screenieXXXXXX.png)

grim "$OUTPUT" || exit 1

imv -s none -f "$OUTPUT" &
imv_pid=$!

function succ() {
    kill "$imv_pid"
    wait
    exit 0
}

SLURP_OUT=$(slurp || succ)

OFFSET=$(echo "$SLURP_OUT" | cut -d' ' -f1 | tr ',' '+')
SIZE=$(echo "$SLURP_OUT" | cut -d' ' -f2)

EXTRACT=$SIZE+$OFFSET

magick -extract "$EXTRACT" "$OUTPUT" "$OUTPUT"
wl-copy -t image/png < "$OUTPUT"

succ
