#!/bin/sh

paused=$([ "`mpc status | grep paused`" ] && echo "‚è∏Ô∏è" || echo "‚ñ∂Ô∏è")
repeat=$([ "`mpc status | grep \"repeat: on\"`" ] && echo "üîÅ")
name=$(basename "$(mpc current)")
time=$(mpc status | awk '/\#/ { print $3 }')
elapsed=$(echo "$time" | cut -d/ -f1)
total=$(echo "$time" | cut -d/ -f2)

format="$repeat$paused $name ($elapsed / $total)"

[ "$name" ] && echo "$format" || echo "No music playing"
[ "$name" ] && echo "$format" || echo "Nothing"
[ "$name" ] && echo `xrdb -query | grep -m1 color2 | cut -f2` \
            || echo `xrdb -query | grep -m1 color3 | cut -f2`
